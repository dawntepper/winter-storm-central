# HTML pages - short cache, allow crawlers to index
/
  Cache-Control: public, max-age=300, must-revalidate
  X-Robots-Tag: all

/index.html
  Cache-Control: public, max-age=300, must-revalidate
  X-Robots-Tag: all

# OG images - moderate cache (refreshes every 15 min)
/api/og-image/*
  Cache-Control: public, max-age=900, s-maxage=900

# Hashed assets - long cache (filenames change on rebuild)
/assets/*
  Cache-Control: public, max-age=31536000, immutable
